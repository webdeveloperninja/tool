        <script>
            $(document).ready(function() {
                console.log(window.location.href);
                var cred = window.location.href.split('?')[1];
                if (cred) {
                    $('#notice').show();
                        setTimeout(function() { 
                        $('#notice').fadeOut(); 
                       }, 5000);
                }
            });
        </script>
