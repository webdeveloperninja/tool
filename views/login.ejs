        <% include ./src/components/primary-nav.ejs %>
        <div class="container login">
            <div class="jumbotron">
                <div class="overlay"></div>
              <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel-group">
                      <div class="panel panel-default">
                        <div class="panel-heading">Log In</div>
                        <div class="panel-body">
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label style="color: black;">Username:</label>
                                    <input class="form-control" type="text" name="username" placeholder="username" required>
                                </div>
                                <div class="form-group">
                                    <label style="color: black;">Password:</label>
                                    <input class="form-control" type="password" name ="password" placeholder="password" required>
                                </div>
                                <input class="btn btn-default" type="submit" value="Log In">
                    <div style="width: 57%; float:right;padding:10px;margin:0;" id="notice" class="alert alert-danger" role="alert">
                        <p style="font-size: 11px;" class="text-center">Wrong Username or Password!</p>
                    </div>
                <% if(succesfullyCreateUser == true) { %>
                    <div class="alert alert-success" role="alert">
                        <p class="text-center">Enjoy CloudCrib! Account Created!</p>
                    </div>
                <% } %>
                <% if(badPassword == true) { %>
                    <div class="alert alert-danger" role="alert">
                        <p class="text-center">Wrong Username or Password!</p>
                    </div>
                <% } %>
                <% if(noMatch == true) { %>
                    <div class="alert alert-danger" role="alert">
                        <p class="text-center">Wrong Username or Password!</p>
                    </div>
                <% } %>
                <% if(userCreated == true) { %>
                    <div class="alert alert-success" role="alert">
                        <p class="text-center">Account Created Please Login</p>
                    </div>
                <% } %>
                            </form>    
                        </div>
                      </div>
                    </div>
                </div>
