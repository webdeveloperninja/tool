                                                    <% for (var i=0; i<tools.length; i++) {%>
                                                        <div class="row tools-row tools-row-admin">
                                                            <div class="col-md-5">
                                                                <a href="/view/?toolId=<%= tools[i]._id %>" class="table-link">
