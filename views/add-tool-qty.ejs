    <div class="container">
            <div class="container">
                <div class="row settings-row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel-group">
                      <div class="panel panel-default">
                        <div class="panel-heading">
                            Add Tool Qty
                        </div>
                        <div class="panel-body" style="text-align: left;">
                            <% if (addSuccess) { %>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="alert alert-success" role="alert">
                                            <p class="text-center">Successfully Added Tool</p>
                                        </div>  
                                    </div>
                                </div>
                            <% } %>
                            <div class="row">
                                <div class="col-md-12">
                                    <h5 class="text-center tool-name"><%= tool.diameter %> <%= tool.brand %> <%= tool.toolType %></h5>
                                    <h5 class="text-center"><strong>Qty: <%= tool.qty %></strong></h5>   
                                </div>
                            </div>
   
                            <form action="" method="POST">
                                <div class="form-group">
                                    <label>Qty: </label>
                                    <input type="number" class="form-control" name="addQty" required  min="0">
                                </div>
                                <input class="hidden" name="id" value="<%= tool.id %>">
                                <input class="hidden" name="userId" value="<%= user.id %>">
                                <input class="hidden" name="originalQty" value="<%= tool.qty %>">
                                <input class="btn btn-primary" type="submit" value="Add Qty">
                                <a href="/" class="btn btn-default">Main Menu</a>
                            </form>    
                        </div>
                      </div>
                    </div>
