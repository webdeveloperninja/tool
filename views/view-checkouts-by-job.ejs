<!DOCTYPE html>
<html ng-app="app">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="../styles.css" rel="stylesheet">
    </head>
    <body <%if(isAuthenticated) {%> class="authenticated" <% } %>>
    <nav class="navbar navbar-inverse navbar-fixed-top __web-inspector-hide-shortcut__">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">ToolingInventory.com</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">

          </ul>
          <ul class="nav navbar-nav navbar-right">
                        <p class="hello">Hello, <%= user.username %> from <%= user.companyName %></p>
                        <a class="btn btn-sm btn-danger" href="/logout">Log Out</a>
                        <a class="btn btn-sm btn-primary" href="/production">Production</a>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
      <% if (isAuthenticated) { %>
      <div class="container admin-fixed-header-nav">
            <div class="row">
                <div class="col-sm-6">
                    <a href="/my-account" class="btn btn-primary table-btn user-nav-btn">My Account</a>
                    <a href="/toolsCSV" class="btn btn-default table-btn user-nav-btn">Download Tool List</a>
                    <a href="/checkoutsCSV" class="btn btn-default table-btn user-nav-btn">Download Tool Usage</a>
                </div>
                <div class="col-sm-6">
                    <a href="/add-tool" class="btn btn-default table-btn pull-right view-checkouts-btn">Add Tool</a>
                    <a href="/view-checkouts" class="btn table-btn btn-default pull-right view-checkouts-btn">View Checkouts</a>
                    <a href="/view-jobs" class="btn btn-default  table-btn pull-right view-checkouts-btn">View Jobs</a>
                    <a href="/view-operators" class="btn btn-default table-btn pull-right view-checkouts-btn">View Operators</a>
                    <a href="/" class="btn btn-default pull-right table-btn view-checkouts-btn active">Tool List</a>
                </div>
            </div>          
      </div>
    <% } %>
    </nav>
    <div class="container">
    <% if (isAuthenticated) { %>
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default tools-list-panel">
                        <div class="panel-heading">
                            <h3 class="text-center">Checkouts List</h3>
                            <h4 class="text-center">Job Number: <%= jobNumber %></h4>
                        </div>
                        <div class="panel-body">
                            <div class="row newsearch">
                                <div class="col-md-6">
                                    <form class="form-wrapper cf">
                                      	<input class="search home-search" type="text" placeholder="Search here..." required>
                                    	  <button class="search-flag" type="submit" disabled>Search</button>
                                    </form>
                                </div>
                            </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr class="tool-list-heading">
                                        <td>Tool Name</td>
                                        <td>Operator Name</td>
                                        <td>Job Name</td>
                                        <td>Checkout Date</td>
                                        <td>Checkout Qty</td>
                                    </tr>
                                </thead>
                                <tbody>
                                     <% for (var i=0; i<checkouts.length; i++) {%>
                                    <tr>
                                        <td><p class="table-value"> <%= checkouts[i].toolName %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].operatorName %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].jobName %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].checkoutDate.toLocaleDateString()  %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].checkoutQty %></p></td> 
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            
        </div>
        <script src="../bower_components/jquery/dist/jquery.min.js"></script>
        <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="../js/app.js"></script>
        
        

        
    </body>
</html>