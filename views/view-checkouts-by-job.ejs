    <div class="container">
    <% if (isAuthenticated) { %>
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default tools-list-panel">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-md-3">
                                    <h2 class="heading">Checkouts List</h2>
                                    <h4>Job Number: <%= jobNumber %></h4>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                        <div id="users">
                            <div class="row newsearch">
                                <div class="col-md-6">
                                    <form class="form-wrapper cf">
                                      	<input class="search production-search" type="text" placeholder="Search here..." required>
                                    	<span class="search-flag text-center">Search</span>
                                    </form>
                                </div>
                                <div class="col-md-4 col-md-offset-2">
                                    <!-- Trigger the modal with a button -->
                                    <button type="button" class="btn btn-success btn-sm hidden-xs hidden-sm hidden-md" id="graph" data-toggle="modal" data-target="#myModal">See your tooling usage</button>
                                </div>
                            </div>
                            
                            
                        
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <div id="status-area">
                                    </div>
                                </div>
                            </div>
            <div class="row admin-header hidden-xs hidden-sm">
                <div class="col-md-4">
                    Tool
                </div>
                <div class="col-md-2">
                    Operator
                </div>
                <div class="col-md-3">
                    Job
                </div>
                <div class="col-md-2">
                    Date
                </div>
                <div class="col-md-1">
                    Qty
                </div>
            </div>
                            <div class="list">
                                <% for (var i=0; i<checkouts.length; i++) {%>
                                    <div class="row tools-row">
                                        <div class="col-md-4">
                                            <p class="table-value name"> <%= checkouts[i].toolName %></p>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="table-value operator"> <%= checkouts[i].operatorName %></p>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="table-value job"> <%= checkouts[i].jobName %></p>                                        
                                        </div>
                                        <div class="col-md-2">
                                            <p class="table-value date"> <%= checkouts[i].checkoutDate.toLocaleDateString()  %></p>                                        </div>
                                        <div class="col-md-1">
                                            <p class="table-value"> <%= checkouts[i].checkoutQty %></p>
                                        </div>
                                    </div>
                                <% } %>
                                <!-- Go back to this hacky as f -->
                                <div style="display:none;">
                                  <!-- A template element is needed when list is empty, TODO: needs a better solution -->
                                  <li id="hacker-item">
                                   <h3 class="name"></h3>
                                   <p class="city"></p>
                                  </li>
                                </div>
                            </div>

                        </div><!-- end table responsive-->
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            
        </div>
        <div id="myModal" class="modal fade bar-graph" role="dialog">
          <div class="modal-dialog">
        
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tooling usage for job # <%= jobNumber %></h4>
              </div>
              <div class="modal-body">
                <!--
                        SVG BAR GRAPH HERE 
                -->
                <!--<svg class="chart"></svg>-->
                
                <div id="step-5"></div>
                
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
        
          </div>
        </div>
