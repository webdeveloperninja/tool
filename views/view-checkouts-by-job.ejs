<!DOCTYPE html>
<html ng-app="app">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="../styles.css" rel="stylesheet">
    </head>
    <body>
    <nav class="navbar navbar-inverse navbar-fixed-top __web-inspector-hide-shortcut__">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">ToolingInventory.com</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">

          </ul>
          <ul class="nav navbar-nav navbar-right">
                        <p class="hello">Hello, <%= user.username %> from <%= user.companyName %>
                        <a class="btn btn-danger" href="/logout">Log Out</a>
                        <a class="btn btn-default" href="/production">Production</a>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container">
    <% if (isAuthenticated) { %>
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <a href="/my-account" class="btn btn-primary user-nav-btn">My Account</a>
                    <a href="/toolsCSV" class="btn btn-default user-nav-btn">Download Tool List</a>
                    <a href="/checkoutsCSV" class="btn btn-default user-nav-btn">Download Tool Usage</a>
                    <a href="/" class="btn btn-default view-checkouts-btn active hidden-xl hidden-lg hidden-md hidden-sm user-nav-btn">Main Menu</a>
                    <a href="/view-checkouts" class="btn btn-default view-checkouts-btn hidden-xl hidden-lg hidden-md hidden-sm user-nav-btn">View Checkouts</a>
                </div>
                <div class="col-sm-6 hidden-xs">
                    <a href="/add-tool" class="btn btn-primary pull-right view-checkouts-btn">Add Tool</a>
                    <a href="/view-checkouts" class="btn btn-default pull-right view-checkouts-btn active">View Checkouts</a>
                    <a href="/view-jobs" class="btn btn-default pull-right view-checkouts-btn">View Jobs</a>
                    <a href="/view-operators" class="btn btn-default pull-right view-checkouts-btn">View Operators</a>
                    <a href="/" class="btn btn-default pull-right view-checkouts-btn">Tool List</a>
                    <!--<a href="/auto-order" class="btn btn-default pull-right ">Auto Order</a>-->
                </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default tools-list-panel">
                        <div class="panel-heading">
                            <h3 class="text-center">Checkouts List</h3>
                            <h4 class="text-center">Job Number: <%= jobNumber %></h4>
                        </div>
                        <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr class="tool-list-heading">
                                        <td>Tool Name</td>
                                        <td>Operator Name</td>
                                        <td>Job Name</td>
                                        <td>Checkout Date</td>
                                        <td>Checkout Qty</td>
                                    </tr>
                                </thead>
                                <tbody>
                                     <% for (var i=0; i<checkouts.length; i++) {%>
                                    <tr>
                                        <td><p class="table-value"> <%= checkouts[i].toolName %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].operatorName %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].jobName %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].checkoutDate.toLocaleDateString()  %></p></td>
                                        <td><p class="table-value"> <%= checkouts[i].checkoutQty %></p></td> 
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            
        </div>
        <script src="../bower_components/jquery/dist/jquery.min.js"></script>
        <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="../js/app.js"></script>
        
        

        
    </body>
</html>