        <script>
            $(window).load(function() {
            	$(".loader").fadeOut("slow");
            })
            
            $(document).ready(function() {
            var options = {
              valueNames: [ 'name', 'operator', 'job', 'date' ]
            };
            
            
            var userList = new List('users', options); 
