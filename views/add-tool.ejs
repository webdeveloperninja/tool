    <body <%if(isAuthenticated) {%> class="authenticated" <% } %>>
<% include ./partials/navbar.ejs %>
    <div class="container-fluid">
                <div class="row settings-row edit-tool">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel-group">
                          <div class="panel panel-default">
                            <div class="panel-heading">Add Tool</div>
                            <div class="panel-body">
                                <form action="" method="post">
                                <div class="form-group">
                                    <label><p>Tool Name:</p></label>
                                    <input class="form-control" name="toolName" required>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                    <label><p>Min Amount:</p></label>
                                    <input class="form-control" id="orderQty" name="autoOrderQty" type="number" min="0" required data-toggle="tooltip" data-placement="bottom" title="Enter the lowest you want your tooling to be before emailing your rep." required >           
                                        </div>
                                        <div class="col-md-6">
                                            <label class="auto-order-label">
                                                <p>Auto Order</p>
                                            </label>
                                            <input class="form-control" id="auto-order-box" type="checkbox">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label><p>Ideal Amount</p></label>
                                    <input class="form-control" name="idealAmount" id="idealQty" type="number" min="0" required  required data-toggle="tooltip" data-placement="bottom" title="This is where you want your tooling to be." required>
                                </div>
                                <div class="form-group">
                                    <label><p>Qty:</p></label>
                                    <input type="number" class="form-control" name="qty" min="0" required>
                                </div>
                                <input class="btn btn-primary save-tool-btn" type="submit" value="Save Tool">
                                <input type="text" name="userId" class="hidden" value="<%= user._id %>">
                                
                            </form> 
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="../bower_components/jquery/dist/jquery.min.js"></script>
        <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="../js/bootstrap-switch.min.js"></script>
        <script src="../js/add-tool.js"></script>
        <script>
            $(window).load(function() {
            	$(".loader").fadeOut("slow");
            })
        </script>
    </body>
</html>